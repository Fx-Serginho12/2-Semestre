@model Projeto.Models.ProdutoBannerViewModel
@{
    ViewData["Title"] = "Home Page";
}

@Html.Partial("../ParcialView/BannerCarrossel", Model.ListaBanners)


<nav class="navbar bg-info navbar-dark navbar-expand-sm ">
        <div class="container">
            <button class="navbar-toggler" type="button"data-bs-toggle="collapse" data-bs-target="#menuNavBar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <form class="d-flex" role="search">
                <div class="input-group">
                    <input class="form-control me-2" type="search">
                    <button class="btn btn-outline-dark" type="submit">Buscar</button>
                </div>
            </form>
        </div>
        <select name="" id="">
            <option value="">Ordenar pelo nomes</option>
            <option value="">Lanche</option>
            <option value="">Sorvete</option>
            <option value="">Refrigerante</option>
            <option value="">Milk Shake</option>
            <option value="">Sundae</option>
            <option value="">Cookie</option>
            <option value="">Brownie</option>
            <option value="">Mega Flurry</option>
            <option value="">Torta</option>
            <option value="">Danone</option>
            <option value="">Suco</option>
            <option value="">Água</option>
            <option value="">Batata Frita</option>
            <option value="">Nuggets</option>
            <option value="">Combo Kids</option>
        </select>
</nav>
 <div>
        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item active">
                    <a href="#" class="page-link">1</a>
                </li>
                <li class="page-item">
                    <a href="#" class="page-link">2</a>
                </li>
                <li class="page-item">
                    <a href="#" class="page-link">3</a>
                </li>
            </ul>
        </nav>
    </div>




<div class="row p-1">
    @foreach (var item in Model.ListaProdutos)
    {

        <!--Modal-->
        <div class="modal fade" id="_@item.ProdutoID">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <button class="btn-close" data-bs-dismiss="modal"></button> 
                    </div>
                    <div class="modal-body">
                        <img class="img-fluid" src="@Html.DisplayFor(modelItem => item.Foto)" alt="" >
                        <h5 class="card-title text-dark">@Html.DisplayFor(modelItem => item.NomeProduto)</h5>
                            <p class="card-text text-dark">@Html.DisplayFor(modelItem => item.Descricao)</p>
                            <a href="#" class=" text-dark">@item.Preco.ToString("C")</a>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger" data-bs-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-3">
            <div class="card tamanho">
                <img class="card-img-top " src="@Html.DisplayFor(modelItem => item.Foto)" alt="Imagem de capa do card">
                <div class="card-body text-center">
                    <h5 class="card-title text-dark">@Html.DisplayFor(modelItem => item.NomeProduto)</h5>
                    <p class="card-text text-dark">@Html.DisplayFor(modelItem => item.Descricao)</p>
                    <button class="btn btn-danger text-white" data-bs-toggle="modal" data-bs-target="#_@item.ProdutoID">Saiba mais</button>
                </div>
            </div>
        </div>

    }
</div>

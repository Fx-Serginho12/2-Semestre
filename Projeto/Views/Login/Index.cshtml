@model App.Models.Usuario
@{
ViewData["Title"] = "Login";
}

<body class="foto">
    <h1 class="text-dark">Login</h1>
    <hr />

    <div class="container col-12 col-lg-6">
        <form asp-action="Index">
                
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="text-dark"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-light"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="text-dark"></label>
                <input type="password" asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
                
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <p class="text-danger">@ViewBag.ErrorMessage</p>
            }
            <div class="form-group text-center mt-3">
                <input type="submit" value="Entrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</body>
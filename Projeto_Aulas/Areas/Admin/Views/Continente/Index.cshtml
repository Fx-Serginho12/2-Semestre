@model IEnumerable<App.Models.Continente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create"  class="btn btn-outline-info">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-success" asp-route-id="@item.ContinenteID">Edit</a> |
                <a asp-action="Details" class="btn btn-outline-primary" asp-route-id="@item.ContinenteID">Details</a> |
                <a asp-action="Delete"  class="btn btn-outline-danger" asp-route-id="@item.ContinenteID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
